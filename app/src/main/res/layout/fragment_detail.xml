<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="songInfo"
            type="com.example.itunesapi.network.SongInfo" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".details.DetailFragment"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/imgFrame"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="92dp"
            android:elevation="10dp"
            app:cardCornerRadius="6dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/songImg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                loadFromUrl="@{songInfo.photo}"
                android:scaleType="fitCenter"
                tools:layout_editor_absoluteX="156dp"
                tools:layout_editor_absoluteY="66dp"
                tools:src="@drawable/ic_launcher_foreground" />

        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:id="@+id/song_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgFrame">

            <TextView
                android:id="@+id/trackName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:padding="6dp"
                android:text="@{songInfo.trackName}"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/black"
                tools:text="August Diary" />

            <TextView
                android:id="@+id/artist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:padding="6dp"
                android:text="@{songInfo.artistName}"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/black"
                tools:text="By Dharia" />

            <TextView
                android:id="@+id/release_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:text="@{songInfo.releaseDate}"
                android:padding="6dp"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/black"
                tools:text="Release Date 21 July 2020" />

            <TextView
                android:id="@+id/tractPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:padding="6dp"
                android:text="@{String.valueOf(songInfo.trackPrice)}"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/black"
                tools:text="Track Price $ 0.4" />

            <TextView
                android:id="@+id/country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:padding="6dp"
                android:text="@{songInfo.country}"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/black"
                tools:text="Country Rome" />


        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>